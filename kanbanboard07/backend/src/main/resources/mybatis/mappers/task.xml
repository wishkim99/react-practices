<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="task">

	<select id="findAll" resultType="taskvo">
            <![CDATA[   
                  select no, name, done, card_no
                      from task
                  order by no desc
              ]]>


	</select>

	<select id="findByNo" parameterType="long" resultType="taskvo">
		<![CDATA[
		    select no, name, done, card_no from task where card_no=#{card_no}
		]]>
	</select>


	<insert id="insertTask" parameterType="taskvo">
		<![CDATA[
			insert
				into task
				values(null, #{name}, 'N', #{card_no})
		]]>
	</insert>
	<delete id="deleteTask" parameterType="long">
		<![CDATA[
			delete
				from task
				where no = ${no}
		]]>
	</delete>
	<update id="update" parameterType="taskvo">
		<![CDATA[
			update 
				task
				set done = #{done}
				where no = #{no}
		]]>
	</update>
</mapper>
